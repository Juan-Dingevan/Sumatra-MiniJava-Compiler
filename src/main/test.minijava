public static void main(String args) {
        try {
            SourceManager sm = new SourceManagerImpl(); //this is a source manager, it manages the sources!
            sm.open("src/test.minijava");

            /*
                Now we go into a sort of loop thing.
                Idk what this does, actually, but it
                sure does look technological!!
            */

            while(true) {
                char c = sm.getNextChar();
                System.out.println("Line: " + sm.getLineNumber() + " Index: " + sm.getLineIndex() + " Read: " + c + "(" + (int) c + ")");

                if(CharacterIdentifier.isEOF(c))
                    break;
            }

            sm.close();
        } catch(Exception ex) {
            ex.printStackTrace();
        }

    }